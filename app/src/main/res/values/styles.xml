<resources tools:ignore="ExtraTranslation" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorLink">@color/colorTextLink</item>
    </style>

    <style name="ButtonStyleOne" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="android:background">@drawable/button_radial</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="ButtonStyleTwo" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="android:background">@drawable/button_radial</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="InputStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/button_radial</item>
        <item name="android:radius">5dp</item>
        <item name="android:textColorHint">@color/colorTextSecondary</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

</resources>
